git config --global alias.amend "commit --amend"
git config --global alias.br "branch"
git config --global alias.branchname "rev-parse --abbrev-ref HEAD"
git config --global alias.cm "commit"
git config --global alias.co "checkout"
git config --global alias.diffc "diff --cached"
git config --global alias.hash "rev-parse HEAD"
git config --global alias.hsh "rev-parse --short HEAD"
git config --global alias.publish '!f() { git push -u origin $(git branchname); }; f;'
git config --global alias.rss "reset --soft"
git config --global alias.rsh "reset --hard"
git config --global alias.st "status"
git config --global alias.syncup '!f() { \
    read -p "Hard reset the current branch to origin/$(git branchname) (y/n) ? " yn
    case $yn in
        [Yy]* ) git reset --hard origin/$(git branchname);;
        * ) echo "aborting syncup"
    esac }; f;'
git config --global alias.uncommit "git reset --soft HEAD~1"
git config --global alias.unstage "reset HEAD --"

git config --global diff.tool vimdiff

git config --global merge.conflictstyle diff3
git config --global merge.tool vimdiff

git config --global mergetool.prompt false

git config --global push.default current
